{
    "compilerOptions": {
      "allowJs": true,
      "outDir": "./dist",
      "target": "es5",
      "lib": ["es2015", "dom"],
      "types": ["node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": false,
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "noImplicitUseStrict": false,
      "noEmitOnError": true,
      "removeComments": true,
      "noLib": false,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true
    },
    "include": [
      "./src/**/*", "./test/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
      "rewriteTsconfig": false
    }
}
